{
    "appId": "com.electron.app",
    "directories": {
        "output": "dist"
    },

    "nsis": {
        "oneClick": false,
        "perMachine": false,
        "allowToChangeInstallationDirectory": true,
        "shortcutName": "Electron App"
    },
    "win": {
        "target": "nsis"
    },
    "linux":  {
        "target": ["snap"]
    },
    "mac": {
        "target": ["dmg"]
    },
    "files": [
        {
            "from": "build/main",
            "to": "main",
            "filter": ["**/*"]
        },
        {
            "from": "build/renderer",
            "to": "renderer",
            "filter": ["**/*"]
        },
        {
            "from": "src/main/static",
            "to": "static",
            "filter": ["**/*"]
        },
	"!build",
	"!dist",
	"!scripts"
    ]
}
